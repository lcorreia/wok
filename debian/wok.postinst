#!/bin/sh
set -e

if [ "$1" = "configure" ]; then
  ln -sf /etc/nginx/sites-available/wok /etc/nginx/sites-enabled/wok
  if which invoke-rc.d >/dev/null 2>&1; then
    invoke-rc.d wok restart
  else
    /etc/init.d/wok restart
  fi
  # Wait for certificates to be generated by wok, so that nginx can use them
  while [ ! -f /etc/wok/wok-key.pem ]; do sleep 1; done
  if which invoke-rc.d >/dev/null 2>&1; then
    invoke-rc.d nginx restart
  else
    /etc/init.d/nginx restart
  fi
fi

